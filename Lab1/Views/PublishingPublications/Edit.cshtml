@model Lab1.Publication

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагувати</h1>

<h4>Публікація</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PublishingId" class="control-label"></label>
                <select asp-for="PublishingId" class="form-control" asp-items="ViewBag.PublishingId"></select>
                <span asp-validation-for="PublishingId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Version" class="control-label"></label>
                <input asp-for="Version" class="form-control" />
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamePublication" class="control-label"></label>
                <input asp-for="NamePublication" class="form-control" />
                <span asp-validation-for="NamePublication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageAmount" class="control-label"></label>
                <input asp-for="PageAmount" class="form-control" />
                <span asp-validation-for="PageAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="text-decoration:none; color:#0ce7e7;">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
